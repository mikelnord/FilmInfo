<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_movie"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Movie"
        app:layout_constraintEnd_toStartOf="@+id/button_tvseries"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_tvseries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV-series"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_movie"
        app:layout_constraintEnd_toStartOf="@+id/button_cartoon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_movie" />

    <Button
        android:id="@+id/button_cartoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartoon"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_tvseries"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_tvseries" />
</androidx.constraintlayout.widget.ConstraintLayout>